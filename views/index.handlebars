<div class="container">
	<div class="row">
		<div class="col-xs-12 text-center" id="top-bar">
		
      <img src="../assets/img/cupcake-drawing.jpg" alt="Cupcake image" class="cupcakeImg" />
			<h1> Best Cupcakes! </h1>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-6 text-center" class="task">
			<div class="row">
			  {{#each cupcake}}
			  	{{#unless this.devoured}}
				<div class="col-xs-9 text-center">
					<pre>
					{{this.id}}. {{this.cupcake_name}}
					</pre>
				  	
				</div>
				<div class="col-xs-3 text-center">
					<form method="POST" action="/api/cupcake/update?_method=PUT" class="button-size">
						<input input type="hidden" type="text" name="id" value={{this.id}}><br>
						<button type="submit" class="btn btn-default">Devour it!</button>
					</form>
				</div>
				{{/unless}}
			  {{/each}}
			</div>
		</div>
		<div class="col-xs-6 text-center" class="task">
			  {{#each cupcake}}
			  	{{#if this.devoured}}
			  		<input class="form-control" type="text" placeholder="{{this.id}}. {{this.cupcake_name}}" readonly>
				{{/if}}
			  {{/each}}
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="form-group col-xs-12 text-center enter_section">
			<form action="/api/cupcake" method="POST">
        <input type="text" id="ca" name="name" class="form-control">
				<button type="submit" class="btn btn-primary" id="text-enter-button">Submit</button>
			</form>
			<p>Enter one of your favorite cupcakes that you would like to eat and hit "Submit" button.</p>
		</div>
	</div>
</div>
